<Window x:Class="SleepPreventer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SleepPreventer"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="375">
    <Grid>
        <StackPanel Margin="0,0,0.4,-0.2">
            <TextBlock x:Name = "statusText" Margin = "20" Width = "300" 
                 HorizontalAlignment = "Center" FontSize = "24" Background = "#FFFDE0E0" TextAlignment="Center" 
                 Text="This app prevents sleep"/>
        </StackPanel>
    </Grid>
</Window>
